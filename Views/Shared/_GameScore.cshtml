

@{
    ViewData["Title"] = "Home Page";
}

<a class="registerHighScore-link" href="~/register/registerhighscore">Register highscore</a>

<div class="game-grid">
    @foreach (var games in Model)
    {
        @foreach (var item in games.Games)
        {
            <div class="game-card">
                <div class="title-link">
                    <a asp-route="gamedetails" asp-route-urlSlug="@item.UrlSlug">

                        <span class="title-info">
                            @item.Title
                        </span>
                    </a>

                    @*TODO: Lägg in spelare namn och datum*@
                    <span class="player">
                        @item.RegisterScore.Player
                    </span>
                    <span class="releaseYear">
                        @item.RegisterScore.Date.ToString("yyyy-MM-dd")
                    </span>

                    <span class="CountHigscore">
                        @item.RegisterScore.Score
                    </span>
                </div>
            </div>
        }

    }
</div>