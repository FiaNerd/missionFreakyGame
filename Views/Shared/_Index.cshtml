
@{
    ViewData["Title"] = "Home Page";
}

<a class="registerHighScore-link" href="~/register/registerhighscore">Register highscore</a>

<div class="game-container">
    @foreach (var games in Model)
    {

        <div class="game-card">
            <a class="title-link" asp-route="gamedetails" asp-route-urlSlug="@games.UrlSlug">

                @games.Title
            </a>

            @{
                var first = true;
            }

            @foreach (var score in games.AllGameScores)
            {

                @if (first)
                {

                    <div class="playDate">

                        <span class="player">
                            @(score?.Player ?? "")
                        </span>

                        <span class="date">
                            @score?.Date.ToString("yyyy-MM-dd")
                        </span>

                        <span class="highScore">
                            @score?.Score
                        </span>

                    </div>
                }

                first = false;
            }

        </div>

    }
</div>